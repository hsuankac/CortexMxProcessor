int main(void)
{
	// 1. Enable all configurable exceptions like usage fault, mem manage fault and bus fault
	uint32_t *pSHCRS = (uint32_t *) 0xE000ED24;
	*pSHCRS |= (1 << 16); // for mem manage
	*pSHCRS |= (1 << 17); // for bus fault
	*pSHCRS |= (1 << 18); // for usage fault

	// 3. Forces the processor to execute some undefined instructions
	uint32_t *pSRAM = (uint32_t *) 0x20001000;
	*pSRAM = 0xFFFFFFFF;

	void (*some_address) (void);
	some_address = (void*) 0x20001001;
	some_address();

	// 4. Analyze the fault
    /* Loop forever */
	for(;;);
}

// 2. Implement the fault handler
void HardFault_Handler(void)
{
	printf("Exception: hard fault\n");
	while(1);
}

void MemManage_Handler(void)
{
	printf("Exception: mem manage fault\n");
	while(1);
}

void BusFault_Handler(void)
{
	printf("Exception: bus fault fault\n");
	while(1);
}

void UsageFault_Handler(void)
{
	uint32_t *pUFSR = (uint32_t *) 0xE000ED2A;
	printf("Exception: usage fault\n");
	printf("UFSR: %lx\n", (*pUFSR) & 0xFFFF);
	while(1);
}

